{% extends "base.twig" %}

{% block content %}
	<div class="clearfix"></div>

	<article id="post-{{ post.ID }}">
		<header class="page-header">
			<div class="page-header-background">
				{#<img src="{{ background_image }}" class="page-header-image" alt="Image alt data"/>#}
			</div>
			<div class="container">
				<div class="top-page-tags">
					{% if (post.tags) %}
						<div class="tag-wrap tags">
							{% for tag in post.tags %}
								<a class="tag-item tag" href="{{ tag.link }}">#{{ tag.name|e('wp_kses_post')|raw }}</a>
							{% endfor %}
						</div>
					{% endif %}
				</div>

				<h1 class="page-header-title">{{ post.title|raw }}</h1>

				<div class="row">
					<div class="col-md-12">
						<ul class="event-meta">
							<li class="date">
								<span class="title">{{ __('Date', 'planet4-child-theme-switzerland' ) }}:</span> {{ post.event_date|date("l, d. F Y") }}
							</li>
							{% if (post.start_time) %}
							<li class="time">
								<span class="title">{{ __('Time', 'planet4-child-theme-switzerland' ) }}:</span> {{ post.start_time }}
							</li>
							{% endif %}
							<li class="place">
								<span class="title">{{ __('Place', 'planet4-child-theme-switzerland' ) }}:</span> {{ post.place }}
							</li>
						</ul>
					</div>
				</div>

				{% if post.thumbnail.src is defined %}
					<div class="row">
						<div class="col-md-12">
							<img src="{{ post.thumbnail.src('large') }}" class="post-header-image"
								 alt="{{ post.title }}"/>
						</div>
					</div>
				{% endif %}
			</div>
		</header>

		<!-- Post Block Start -->
		<div class="container">
			<div class="post-content">
				<div class="post-content-lead">
					<article class="post-details clearfix">
						{{ post.content|raw }}
					</article>
				</div>
			</div>
		</div>
		<!-- Post Page Block End -->
	</article>
{% endblock %}
