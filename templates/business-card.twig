{% extends "base.twig" %}
{% block content %}
	<main class="page-content container {% if hide_page_title or not header_title %}no-page-title{% endif %}"
		  id="content">
		{{ post.content|raw }}
		<div class="business-card-content">
			<!-- wp:group {"className":"is-style-background-1","layout":{"type":"constrained"}} -->
			<div class="wp-block-group is-style-background-1">

				{% if (user.bc_profile_picture) %}
					<!-- wp:image {"id":115874,"width":180,"height":180,"sizeSlug":"medium","linkDestination":"none","align":"center","className":"is-style-rounded-180"} -->
					<figure
						class="wp-block-image aligncenter size-medium is-resized is-style-rounded-180 business-card-image">
						<img src="{{ user.bc_profile_picture }}" alt="" class="wp-image-115874"
							 style="width:180px;height:180px"/>
					</figure>
				{% endif %}

				<!-- wp:heading {"textAlign":"center","level":1,"metadata":{"name":"Blank page"}} -->
				<h1 class="wp-block-heading has-text-align-center">{{ user.bc_name }}</h1>
				<!-- /wp:heading -->

				{% if (user.bc_job_title or user.bc_organisation) %}
					<!-- wp:paragraph {"align":"center"} -->
					<p class="has-text-align-center">{{ user.bc_job_title }}<br>{{ user.bc_organisation }}</p>
					<!-- /wp:paragraph -->
				{% endif %}

				<!-- wp:buttons {"layout":{"type":"flex","justifyContent":"center"}} -->
				<div
					class="wp-block-buttons is-content-justification-center is-layout-flex wp-container-core-buttons-is-layout-1 wp-block-buttons-is-layout-flex">
					<!-- wp:button {"className":"is-style-cta"} -->
					<div class="wp-block-button is-style-cta">
						<a class="wp-block-button__link wp-element-button" href="{{ vcard_link }}">
							<svg viewBox="0 0 32 32" class="icon">
								<use
									xlink:href="/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#download"></use>
							</svg>

							{{ _x('Download Contact', 'business-card', 'planet4-child-theme-switzerland') }}
						</a>
					</div>
					<!-- /wp:button --></div>
				<!-- /wp:buttons -->
			</div>
			<!-- /wp:group -->

			<!-- wp:columns -->
			<div class="wp-block-columns"><!-- wp:column -->
				{% if (user.bc_email or user.bc_phone or user.bc_mobile) %}
					<div class="wp-block-column">
						<!-- wp:heading {"textAlign":"center"} -->
						<h2 class="wp-block-heading has-text-align-center">{{ _x('Reach me via:', 'business-card', 'planet4-child-theme-switzerland') }}</h2>
						<!-- /wp:heading -->

						{% if(user.bc_email) %}
							<!-- wp:paragraph {"align":"center"} -->
							<p class="has-text-align-center">
								<strong>{{ _x( 'Email', 'planet4-child-theme-switzerland' ) }}</strong><br><a
									href="mailto:{{ user.bc_email }}">{{ user.bc_email }}</a></p>
							<!-- /wp:paragraph -->
						{% endif %}

						{% if(user.bc_phone) %}
							<!-- wp:paragraph {"align":"center"} -->
							<p class="has-text-align-center">
								<strong>{{ _x( 'Phone', 'planet4-child-theme-switzerland' ) }}</strong><br><a
									href="tel:{{ user.bc_phone }}">{{ user.bc_phone }}</a></p>
							<!-- /wp:paragraph -->
						{% endif %}

						{% if(user.bc_mobile) %}
							<!-- wp:paragraph {"align":"center"} -->
							<p class="has-text-align-center">
								<strong>{{ _x( 'Mobile', 'planet4-child-theme-switzerland' ) }}</strong><br><a
									href="tel:{{ user.bc_mobile }}">{{ user.bc_mobile }}</a></p>
							<!-- /wp:paragraph -->
						{% endif %}
					</div>
					<!-- /wp:column -->
				{% endif %}

				{% if (user.bc_linkedin or user.bc_bluesky or user.bc_instagram or user.bc_facebook) %}
				<!-- wp:column -->
				<div class="wp-block-column">
					<!-- wp:heading -->
					<h2 class="wp-block-heading has-text-align-center">{{ _x('Find me on:', 'business-card', 'planet4-child-theme-switzerland') }}</h2>
					<!-- /wp:heading -->

					<div class="business-card-socials">
						{% if(user.bc_linkedin) %}
							<div class="business-card-socials-icon">
								<a href="{{ user.bc_linkedin }}" title="LinkedIn">
									<svg viewBox="0 0 32 32" class="icon">
										<use
											xlink:href="/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#linkedin"></use>
									</svg>
								</a></div>
						{% endif %}

						{% if(user.bc_bluesky) %}
							<div class="business-card-socials-icon">
								<a href="{{ user.bc_bluesky }}" title="Bluesky">
									<svg viewBox="0 0 32 32" class="icon">
										<use
											xlink:href="/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#bluesky"></use>
									</svg>
								</a></div>
						{% endif %}

						{% if(user.bc_instagram) %}
							<div class="business-card-socials-icon">
								<a href="{{ user.bc_instagram }}" title="Instagram">
									<svg viewBox="0 0 32 32" class="icon">
										<use
											xlink:href="/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#instagram"></use>
									</svg>
								</a></div>
						{% endif %}

						{% if(user.bc_facebook) %}
							<div class="business-card-socials-icon">
								<a href="{{ user.bc_facebook }}" title="Facebook">
									<svg viewBox="0 0 32 32" class="icon">
										<use
											xlink:href="/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#facebook-square"></use>
									</svg>
								</a>
							</div>
						{% endif %}
					</div>
					{% endif %}
				</div>
				<!-- /wp:column -->
			</div>
			<!-- /wp:columns -->
		</div>
	</main>
	{{ fn('do_blocks', '<!-- wp:p4/bottom-page-navigation-block /-->')|raw }}
{% endblock %}
