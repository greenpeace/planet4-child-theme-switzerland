<div class="business-card-content">
	<!-- wp:group {"className":"is-style-background-1","layout":{"type":"constrained"}} -->
	<div class="wp-block-group is-style-background-1">

		<!-- wp:image {"id":115874,"width":180,"height":180,"sizeSlug":"medium","linkDestination":"none","align":"center","className":"is-style-rounded-180"} -->
		<figure class="wp-block-image aligncenter size-medium is-resized is-style-rounded-180 business-card-image">
			<img src="{{ user.bc_profile_picture }}" alt="" class="wp-image-115874" style="width:180px;height:180px"/>
		</figure>

		<!-- wp:heading {"textAlign":"center","level":1,"metadata":{"name":"Blank page"}} -->
		<h1 class="wp-block-heading has-text-align-center">{{ user.bc_name }}</h1>
		<!-- /wp:heading -->

		<!-- wp:paragraph {"align":"center"} -->
		<p class="has-text-align-center">{{ user.bc_job_title }}<br>{{ user.bc_organisation }}</p>
		<!-- /wp:paragraph -->

		<!-- wp:buttons {"layout":{"type":"flex","justifyContent":"center"}} -->
		<div class="wp-block-buttons is-content-justification-center is-layout-flex wp-container-core-buttons-is-layout-1 wp-block-buttons-is-layout-flex"><!-- wp:button {"className":"is-style-cta"} -->
			<div class="wp-block-button is-style-cta">
				<a class="wp-block-button__link wp-element-button" href="{{ vcard_link }}">
					<svg viewBox="0 0 32 32" class="icon"><use xlink:href="http://www.planet4.test/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#download"></use></svg>

					Download Contact
				</a>
			</div>
			<!-- /wp:button --></div>
		<!-- /wp:buttons -->
	</div>
	<!-- /wp:group -->

	<!-- wp:columns -->
	<div class="wp-block-columns"><!-- wp:column -->
		<div class="wp-block-column">
			<!-- wp:heading {"textAlign":"center"} -->
			<h2 class="wp-block-heading has-text-align-center">Reach me via:</h2>
			<!-- /wp:heading -->

			{% if(user.bc_email) %}
				<!-- wp:paragraph {"align":"center"} -->
				<p class="has-text-align-center"><strong>{{ __( 'Email', 'planet4-child-theme-switzerland' ) }}</strong><br><a href="{{ user.bc_email }}">{{ user.bc_email }}</a></p>
				<!-- /wp:paragraph -->
			{% endif %}

			{% if(user.bc_phone) %}
				<!-- wp:paragraph {"align":"center"} -->
				<p class="has-text-align-center"><strong>{{ __( 'Phone', 'planet4-child-theme-switzerland' ) }}</strong><br><a href="mailto:{{ user.bc_phone }}">{{ user.bc_phone }}</a></p>
				<!-- /wp:paragraph -->
			{% endif %}

			{% if(user.bc_mobile) %}
				<!-- wp:paragraph {"align":"center"} -->
				<p class="has-text-align-center"><strong>{{ __( 'Mobile', 'planet4-child-theme-switzerland' ) }}</strong><br><a href="mailto:{{ user.bc_mobile }}">{{ user.bc_mobile }}</a></p>
				<!-- /wp:paragraph -->
			{% endif %}
		</div>
		<!-- /wp:column -->

		<!-- wp:column -->
		<div class="wp-block-column">
			<!-- wp:heading -->
			<h2 class="wp-block-heading">Find me on:</h2>
			<!-- /wp:heading -->

			<!-- wp:columns {"isStackedOnMobile":false} -->
			<div class="wp-block-columns is-not-stacked-on-mobile business-card-socials">
				{% if(user.bc_linkedin) %}
					<!-- wp:column -->
					<div class="wp-block-column"><!-- wp:html -->
						<a href="{{ user.bc_linkedin }}">
							<svg viewBox="0 0 32 32" class="icon"><use xlink:href="http://www.planet4.test/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#linkedin"></use></svg>
							<!-- /wp:html --></a></div>
					<!-- /wp:column -->
				{% endif %}

				{% if(user.bc_bluesky) %}
					<!-- wp:column -->
					<div class="wp-block-column"><!-- wp:html -->
						<a href="{{ user.bc_bluesky }}">
							<svg viewBox="0 0 32 32" class="icon"><use xlink:href="http://www.planet4.test/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#bluesky"></use></svg>
							<!-- /wp:html --></a></div>
					<!-- /wp:column -->
				{% endif %}

				{% if(user.bc_instagram) %}
					<!-- wp:column -->
					<div class="wp-block-column"><!-- wp:html -->
						<a href="{{ user.bc_instagram }}">
							<svg viewBox="0 0 32 32" class="icon"><use xlink:href="http://www.planet4.test/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#instagram"></use></svg>
							<!-- /wp:html --></a></div>
					<!-- /wp:column -->
				{% endif %}

				{% if(user.bc_facebook) %}
					<!-- wp:column -->
					<div class="wp-block-column"><!-- wp:html -->
						<a href="{{ user.bc_facebook }}">
							<svg viewBox="0 0 32 32" class="icon"><use xlink:href="http://www.planet4.test/wp-content/themes/planet4-master-theme/assets/build/sprite.symbol.svg#facebook-square"></use></svg>
							<!-- /wp:html --></a></div>
					<!-- /wp:column -->
				{% endif %}
			</div>
			<!-- /wp:columns -->
		</div>
		<!-- /wp:column -->
	</div>
	<!-- /wp:columns -->
</div>
