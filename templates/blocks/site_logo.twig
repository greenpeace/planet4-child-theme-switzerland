{% set logo = custom_styles.campaign_logo %}
{% if (logo) and (logo != 'greenpeace') %}
    <img src="{{ data_nav_bar.images }}{{ logo }}/logo-{{ custom_styles.campaign_logo_color}}.png" alt="Greenpeace">
{% else %}
    <img src="{{ function('get_stylesheet_directory_uri') }}/images/gp-logo.svg" alt="Greenpeace">
{% endif %}
